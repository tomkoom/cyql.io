{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    /* "target": "ES2018" Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019' or 'ESNEXT'. */
    "lib": ["es2020", "ES2018", "DOM"] /* Specify library files to be included in the compilation. */,
    "allowJs": true /* Allow javascript files to be compiled. */,
    "checkJs": false,
    "jsx": "react-jsx" /* Specify JSX code generation: 'preserve', 'react-native', 'react-jsx', or 'react-jsxdev'. */,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src/frontend",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/frontend"],
  "exclude": ["src/frontend/idl/*.js"]
}
